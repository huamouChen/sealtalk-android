<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <!--头像-->
    <cn.chenhuamou.im.server.widget.SelectableRoundedImageView
        android:id="@+id/img_group_header"
        app:sriv_left_bottom_corner_radius="3dip"
        app:sriv_left_top_corner_radius="3dip"
        app:sriv_right_bottom_corner_radius="3dip"
        app:sriv_right_top_corner_radius="3dip"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/text_black_color"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/img_group_header"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_group_member_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_tips_color"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/tv_group_name"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chm_separator_height"
        android:background="@color/black_textview"
        android:layout_below="@+id/tv_group_member_num"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="确认加入群聊"
        android:layout_below="@+id/view_separator"
        android:textColor="@color/text_black_color"
        android:textSize="16sp"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/btn_comfirm"
        android:textSize="18sp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dip"
        android:background="@drawable/rs_select_btn_blue"
        android:text="加入该群聊"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/tv_tip"/>


</RelativeLayout>