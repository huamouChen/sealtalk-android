<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rs_select_btn_blue"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_bankCardLogo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginStart="@dimen/base_margin2"
            android:contentDescription="@string/bankcard_symbol"
            android:src="@drawable/ic_card" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_bank_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_bank_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/tv_bank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:visibility="visible"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/base_margin2"
            android:background="@drawable/shape_unbind"
            android:gravity="center"
            android:paddingBottom="@dimen/jrmf_dimen_4"
            android:paddingLeft="@dimen/half_base_margin"
            android:paddingRight="@dimen/half_base_margin"
            android:paddingTop="@dimen/jrmf_dimen_4"
            android:text="@string/bankcard_unbind"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>




</LinearLayout>








